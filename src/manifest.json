{
  "manifest_version": 2,
  "name": "Aleo hackathon wallet",
  "description": "Aleo wallet compatible with ARC-1193",
  "background": { "scripts": ["background.bundle.js"] },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "https://api.backend.ai/",
    "https://lablup.onprem.backend.ai/"
  ],
  "host_permissions": ["<all_urls>"],
  "devtools_page": "devtools.html",
  "web_accessible_resources": ["api.bundle.js", "content.styles.css", "icon-128.png", "icon-34.png"],
  "externally_connectable": {
    "matches": ["https://*/*"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
